<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"

    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="fragment.fragment.MainActivity"
    >

    <fragment
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:name="fragment.fragment.FragmentOne"
        android:id="@+id/fragment"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
<View
    android:layout_width="match_parent"
    android:layout_height="20dp"></View>
    <fragment
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:name="fragment.fragment.FragmentTwo"
        android:id="@+id/fragment2"
        android:layout_below="@+id/fragment"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <View
        android:layout_width="match_parent"
        android:layout_height="20dp"></View>

    <fragment
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:name="fragment.fragment.FragmentThree"
        android:id="@+id/fragment3"
        android:layout_below="@+id/fragment2"
        android:layout_centerHorizontal="true" />
</LinearLayout>
